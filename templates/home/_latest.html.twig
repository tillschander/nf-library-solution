<section class="max-w-7xl mx-auto px-8 mt-12">
    <h3 class="text-lg font-bold text-nfblue">
        Latest items
    </h3>
    <div class="mt-4 grid gap-4 grid-cols-5">
        {% for item in items %}
        <a href="/items/{{ item.id }}"
            class="flex flex-col items-center text-center bg-white shadow rounded-lg p-4 hover-orange group">
            <img class="h-48 block rounded-lg"
                src="{{ item.coverUrl }}" />
            <h3 class="mt-4 text-nfblue font-bold leading-tight group-hover:text-white">{{ item.name }}</h3>
            <h4 class="text-nfblue-light text-sm mt-1 group-hover:text-white">{{ item.artist }}</h4>
        </a>
        {% endfor %}
    </div>
</section>
