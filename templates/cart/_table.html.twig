<table class="mt-4 bg-white shadow rounded-lg w-full">
    <tbody class="divide-y divide-gray-200">
        {% for item in items %}
        <tr class="p-4 flex items-center justify-between">
            <td class="w-5/6 flex">
                <img class="h-16 mr-4 rounded"
                    src="{{ item.coverUrl }}"
                    alt="">
                <div class="flex flex-col justify-center">
                    <div class="text-nfblue font-bold">
                        {{ item.name }}
                    </div>
                    <div class="text-nfblue-light">
                        {{ item.artist }}
                    </div>
                </div>
            </td>
            <td class="w-1/6 text-right">
                <button class="px-6 py-2 rounded-md text-white bg-nfblue hover-orange">Delete</button>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>